            <TextView
                android:textSize="16sp"
                android:textColor="@color/tablecolor"
                android:layout_weight="4"
                android:width="0px"
                android:height="45dp"
                android:background="@drawable/cellbg"
                android:gravity="center"
                android:text="11월~12월" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/tablecolor"
                android:layout_weight="5"
                android:width="0px"
                android:height="45dp"
                android:background="@drawable/cellbg"
                android:gravity="center"
                android:text="09:00~17:00" />
            <TextView
                android:textSize="16sp"
                android:textColor="@color/tablecolor"
                android:layout_weight="5"
                android:width="0px"
                android:height="45dp"
