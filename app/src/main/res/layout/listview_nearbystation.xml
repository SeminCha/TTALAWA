<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/data_item_bg"
    android:orientation="vertical"
    android:paddingBottom="13dp"
    android:paddingEnd="13dp"
    android:paddingStart="13dp"
    android:paddingTop="13dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="5.5">

        <TextView
            android:id="@+id/placenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="123"
            android:textColor="#6b82a1"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:singleLine="true"
            android:id="@+id/placename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.3"
            android:gravity="center_vertical"
            android:scrollHorizontally="true"
            android:text="대여소 이름"
            android:textColor="@color/maincolor"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            >

            <Button
                android:background="@drawable/visit_btn"
                android:layout_width="85dp"
                android:layout_height="27dp"
                android:text="@string/navigation"
                android:textSize="14dp"
                android:focusable="false"
                android:id="@+id/directNavigationBtn"
                android:layout_alignParentStart="true"
                android:layout_marginStart="49dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:text="@string/about"
                android:textColor="@color/grey_light"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <TextView
                android:id="@+id/placedistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center|right"
                android:text="23.5 km"
                android:textColor="@color/grey_dark"
                android:textSize="19dp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

