<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:fillViewport="false"
        android:visibility="visible">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="25dp"
                android:gravity="top"
                android:paddingLeft="17dp"
                android:text="@string/tour_adm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/maincolor"/>
            <!--관람요금 안내-->
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="50dp"
                android:textSize="10pt">

                <TableRow android:weightSum="14">

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/tablecolor"
                        android:layout_weight="10"
                        android:width="0px"
                        android:height="45dp"
                        android:background="@drawable/celltitle"
                        android:gravity="center"
                        android:text="대상" />

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/tablecolor"
                        android:layout_weight="4"
                        android:width="0px"
                        android:height="45dp"
                        android:background="@drawable/celltitle"
                        android:gravity="center"
                        android:text="관람 요금" />


                </TableRow>

                <TableRow android:weightSum="14">

                    <TableLayout android:layout_weight="10">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/tablecolor"
                            android:width="0px"
                            android:height="45dp"
                            android:background="@drawable/cellbg"
                            android:gravity="center"
                            android:text="만 25세~64세(내국인)" />

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/tablecolor"
                            android:width="0px"
                            android:height="45dp"
                            android:background="@drawable/cellbg"
                            android:gravity="center"
                            android:text="만 19세 이상 외국인" />
                    </TableLayout>

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/tablecolor"
                        android:layout_weight="4"
                        android:width="0px"
                        android:height="90dp"
                        android:background="@drawable/cellbg"
                        android:gravity="center"
                        android:text="1,000원" />
                </TableRow>

                <TableRow android:weightSum="14">

                    <TableLayout android:layout_weight="10">

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/tablecolor"
                            android:width="0px"
                            android:height="45dp"
                            android:background="@drawable/cellbg"
                            android:gravity="center"
                            android:text="만 24세 이하, 만 65세 이상(내국인)" />

                        <TextView
                            android:textSize="16sp"
                            android:textColor="@color/tablecolor"
                            android:width="0px"
                            android:height="45dp"
                            android:background="@drawable/cellbg"
                            android:gravity="center"
                            android:text="만 6세 이하 외국인" />
                    </TableLayout>

                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/tablecolor"
                        android:layout_weight="4"
                        android:width="0px"
                        android:height="90dp"
                        android:background="@drawable/cellbg"
                        android:gravity="center"
                        android:text="외국인" />
                </TableRow>

                <TableRow android:weightSum="14">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/tablecolor"
                        android:layout_weight="10"
                        android:width="0px"
                        android:height="90dp"
                        android:background="@drawable/cellbg"
                        android:gravity="center"
                        android:text="만 7세 이상~만 18세 이상 외국인" />
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/tablecolor"
                        android:layout_weight="4"
                        android:width="0px"
                        android:height="90dp"
                        android:background="@drawable/cellbg"
                        android:gravity="center"
                        android:text="500원" />
                </TableRow>

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/tablecolor"
                    android:layout_weight="14"
                    android:width="0px"
                    android:height="45dp"
                    android:background="@drawable/celltitle"
                    android:gravity="center"
                    android:text="비고" />

                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/tablecolor"
                    android:layout_weight="14"
                    android:width="0px"
                    android:height="45dp"
                    android:background="@drawable/cellbg_top"
                    android:gravity="center"
                    android:text="※ 무료관람대상자 (반드시 관련 증빙 제시)" />
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/tablecolor"
                    android:layout_weight="14"
                    android:width="0px"
                    android:height="45dp"
                    android:background="@drawable/cellbg_center"
                    android:gravity="center_vertical"
                    android:text="      - 만 24세 이하 청소년(학생증 또는 신분증 지참)" />
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/tablecolor"
                    android:layout_weight="14"
                    android:width="0px"
                    android:height="45dp"
                    android:background="@drawable/cellbg_center"
                    android:gravity="center_vertical"
                    android:text="      - 만 6세 이하, 만 65세 이상 국민(신분증 지참)" />
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/tablecolor"
                    android:layout_weight="14"
                    android:width="0px"
                    android:height="45dp"
                    android:background="@drawable/cellbg_btm"
                    android:gravity="center_vertical"
                    android:text="      - 만 6세 이하 및 만 65세 이상 외국인" />
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>