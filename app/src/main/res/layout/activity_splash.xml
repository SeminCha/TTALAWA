<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg3"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="10"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_weight="7.5"
        android:src="@drawable/splash_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <!--따-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_dot1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u25CF"
                android:textAlignment="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txt_tta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="따"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_reungi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="릉이"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!--라-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_dot2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u25CF"
                android:textAlignment="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txt_ra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 라"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_idingharu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이딩 하러"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!--와-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_dot3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u25CF"
                android:textAlignment="center"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/txt_wa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="와"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
