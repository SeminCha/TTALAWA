<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:fillViewport="false"
    android:visibility="visible">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/spot_img"
            android:layout_width="fill_parent"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/sungryemun_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"></LinearLayout>
        <!--관광소명-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/spotnamelayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/tourspot_label" />

            <TextView
                android:id="@+id/tab1_spotname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="관광지 이름"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:layout_marginLeft="10dp"
                android:background="@drawable/visit_btn"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="방문인증"
                android:textSize="14dp"
                android:id="@+id/visitCheckBtn"
                android:elevation="10dp" />

        </LinearLayout>
        <!--관광지 주소-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/spotaddrlayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="주소"
                android:textColor="@color/maincolor"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tab1_spotaddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:text="관광지 주소"
                android:textColor="@color/grey_darker"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>

        <!--버튼 레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <!--전화연결-->
            <RelativeLayout
                android:id="@+id/btn_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/connect_bg"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전화"
                        android:textColor="@color/maincolor" />
                </LinearLayout>

            </RelativeLayout>

            <!--사이트로 연결-->
            <RelativeLayout
                android:id="@+id/btn_website"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/connect_bg"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/web" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사이트"
                        android:textColor="@color/maincolor" />
                </LinearLayout>
            </RelativeLayout>
            <!--지도 보기-->
            <RelativeLayout
                android:id="@+id/showmap_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/connect_bg"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/place" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지도"
                        android:textColor="@color/maincolor" />
                </LinearLayout>
            </RelativeLayout>
            <!--길 찾기-->
            <RelativeLayout
                android:id="@+id/navi_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:background="@drawable/connect_bg"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/navi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경로안내"
                        android:textColor="@color/maincolor" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="10dp"></LinearLayout>

        <!--관광지 설명 텍스트-->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1.5dp"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">
            <!--android:background="@drawable/spotinfo_bg"-->

            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="30dp"
                android:text="소개"
                android:textColor="@color/maincolor"
                android:textSize="17sp"
                android:textStyle="bold"
                android:id="@+id/textView2" />

            <TextView
                android:lineSpacingExtra="5dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:id="@+id/tab1_spottext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울을 한눈에 조망할 수 있는 남산의 명소. 2, 3층 전망대와 회전 레스토랑에서 아름다운 서울의 야경을 관람한다."
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>