<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:visibility="gone"
    android:id="@+id/alarmSettingLayout">

    <LinearLayout
        android:id="@+id/voidLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:orientation="vertical"/>
    <RelativeLayout
        android:id="@+id/alarmInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_below="@+id/voidLayout"
        android:elevation="6dp"
        android:background="#CCffffff">
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/alarmInfoLayout"
        android:background="@color/grey_lighter"
        android:elevation="50dp">

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="210dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:elevation="50dp">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="30dp"
                android:text="5"
                android:id="@+id/button_5"
                android:background="@drawable/roundedbutton"
                android:layout_marginTop="105dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="0dp" />
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="30dp"
                android:text="10"
                android:id="@+id/button_10"
                android:layout_marginTop="105dp"
                android:layout_marginStart="99dp"
                android:background="@drawable/roundedbutton" />
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="30dp"
                android:text="20"
                android:id="@+id/button_20"
                android:layout_marginTop="105dp"
                android:layout_marginStart="173dp"
                android:background="@drawable/roundedbutton" />
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:elevation="30dp"
                android:text="30"
                android:id="@+id/button_30"
                android:layout_marginTop="105dp"
                android:layout_marginStart="247dp"
                android:background="@drawable/roundedbutton" />
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:elevation="30dp"
                android:text="알람 시간 설정"
                android:id="@+id/textView2"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="100dp" />
            <Switch
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/switch1"
                android:elevation="30dp"
                android:checked="false"
                android:layout_marginTop="25dp"
                android:layout_marginStart="200dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="210dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="230dp"
            android:background="@color/white"
            android:elevation="50dp">
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="30dp"
                android:text="소리"
                android:id="@+id/button_sound"
                android:layout_marginTop="90dp"
                android:layout_marginStart="70dp"
                android:background="@drawable/roundedbutton" />
            <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="30dp"
                android:text="진동"
                android:id="@+id/button_vib"
                android:layout_marginTop="90dp"
                android:layout_marginStart="175dp"
                android:background="@drawable/roundedbutton" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:elevation="30dp"
                android:text="알람 종류 설정"
                android:id="@+id/textView3"
                android:layout_marginTop="45dp"
                android:layout_marginStart="100dp" />

            <Switch
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:elevation="30dp"
                android:id="@+id/switch2"
                android:checked="false"
                android:layout_marginTop="30dp"
                android:layout_marginStart="200dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
