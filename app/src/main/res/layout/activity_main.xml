<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ensharp.ttalawa.MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.iotaconcepts.aurum.MapLocationActivity" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp">

            <Button
                android:id="@+id/tourspot"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:onClick="btn_TourSpot_Click"
                android:text="관광지"
                android:textSize="10dp" />

            <Button
                android:id="@+id/stationlist"
                android:layout_width="54dp"
                android:layout_height="36dp"
                android:onClick="btn_StationList_Click"
                android:text="목록"
                android:textSize="10dp"
                android:layout_below="@+id/tourspot"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
