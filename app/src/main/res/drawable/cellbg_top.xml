<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/white" />
        </shape>
    </item>


    <!--top-->
    <item android:left="-3dp" android:right="-3dp" android:bottom="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.6dp"
                android:color="#c3cdd9" />
        </shape>
    </item>


    <!--right-->
    <item android:top="-3dp" android:left="-3dp" android:bottom="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.6dp"
                android:color="#c3cdd9" />
        </shape>
    </item>

    <!--left-->
    <item android:top="-3dp" android:right="-3dp" android:bottom="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.6dp"
                android:color="#c3cdd9" />
        </shape>
    </item>
</layer-list>