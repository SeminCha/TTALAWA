<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#e6e6fa" />
        </shape>
    </item>

    <!--bottom-->
    <item android:top="-3dp" android:right="-3dp" android:left="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#bebebe" />
        </shape>
    </item>

    <!--right-->
    <item android:top="-3dp" android:left="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.7dp"
                android:color="#bebebe" />
        </shape>
    </item>

    <!--left-->
    <item android:top="-3dp" android:right="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="0.7dp"
                android:color="#bebebe" />
        </shape>
    </item>

    <!--top-->
    <item android:left="-3dp" android:right="-3dp" android:bottom="-3dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#bebebe" />
        </shape>
    </item>

</layer-list>